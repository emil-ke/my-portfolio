    .GitHubLink > .GitHubName {
        transition: all 0.2s ease-out;
    }

    .GitHubLink:hover > .GitHubName {
        color: var(--text-color);
    }

    .GitHubName {
        text-decoration: underline;
        color: var(--accent_d);
    }

    @media (max-width: 768px) {
        .left {
            width: 100%;
        }
        footer {
            font-size: 0.9em;
        }
        h4 {
            display: none;
        }
