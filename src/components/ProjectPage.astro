---
const { title, images = [] } = Astro.props;
---

<style>
    .projectWrapper {
        width: 92%;
        display: flex;
        flex-direction: column;
        margin: 0 auto;
        padding: 8rem 0 12rem 0;
    }

    .projectContent {
        display: flex;
        flex-direction: row;
        min-height: 100vh;
    }
    .projectTitle {
        margin-bottom: 6rem;
    }

    .projectText {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }

    .projectImages {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 2rem;
    }

    .projectImages img {
        max-width: 80%;
        margin-bottom: 2rem;
    }

    .goBackBtn {
        color: var(--accent_d);
        padding: 1rem 2rem;
        transition: all 0.2s ease-in-out;
        border: 2px solid var(--accent_l);
    }

    .goBackBtn:hover {
        color: var(--text-color);
        border: 2px solid var(--accent_d);
    }

    @media (max-width: 1020px) {
        .projectContent {
            flex-direction: column;
        }
        .projectImages {
            align-items: center;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 3rem;
            gap: 2rem;
        }
        .projectImages img {
            max-width: 90vw;
            margin-bottom: 0;
        }
    }
</style>

<div class="projectWrapper">
    <div class="projectContent">
        <div class="projectText">
            <h4 class="projectTitle">{title}</h4>
            <slot />
        </div>
        <div class="projectImages">
            {
                images.map((src) => (
                    <img src={src} alt={title + " screenshot"} loading="lazy" />
                ))
            }
        </div>
    </div>
    <div class="spacer"></div>
    <div class="backBtnWrapper">
        <a class="goBackBtn" href="/#projects">‚Üê back to projects</a>
    </div>
</div>
